@import url(//fonts.googleapis.com/earlyaccess/notosanstc.css)

*, *:before, *:after
  box-sizing inherit

html
  box-sizing border-box
  font-size 12px
  font-family "Noto Sans TC", "STHeitiTC-Light", Microsoft JhengHei, "Microsoft JhengHei", sans-serif
body
  overflow-x hidden
  &.disableScrollY
    overflow-y hidden

section
  display flex
a, p, h1, h2
  font-weight 300
  margin 0
a
  cursor pointer
p
  font-size 1.2rem
h1
  font-size 2rem
h2
  font-size 1.4rem
h3
  font-size 1.2rem
img
  transform translate3d(0,0,0)
button
  font-size 2rem
  cursor pointer
  
.container
  padding 70px 15px 20px
.opening
  position relative
  width 100vw
  height 100vh
  background-color #000
  background-position 25% center
  background-repeat no-repeat
  background-size cover
  overflow-x hidden
  &__curtain
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 100%
    height 100%
    background-image url("./images/opening-black.jpg")
    background-position 25% center
    background-repeat no-repeat
    background-size cover
    opacity 0
  .typedElementContainer
    width 70%
    text-align justify
    .arrow
      width 30%
      margin 40px auto 0
      opacity 0
      > img
        width 100%
  .typedElement
    color #fff
    font-weight 300
    font-size 1.2rem
    line-height 1.5
.intro
  display flex
  flex-direction column
  align-items center
  justify-content center
  width 100vw
  height 100vh
  color #fff
  background-color #333
  background-image url('./images/grid.png')
  background-size 15px 15px
  overflow-x hidden
  &__title
    width 80%
  &__start
    display flex
    flex-direction column
    align-items center
    width 80%
    margin-top 20px
