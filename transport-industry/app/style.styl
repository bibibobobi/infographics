      margin .5em 0 1em
      font-size 1.3rem
      line-height 1.5
      text-align justify
  &__infobox
    display none
    position fixed
    top 0
    left 0
    z-index 200
    width 100vw
    height 100vh
    background-color rgba(0,0,0,.85)
    overflow-y auto
    > h2
      color #fff
    > p
      color #fff
    > button
      display block
      margin 0 auto
      padding 10px 20px
      color #fff
      background-color #e63946
      box-shadow none
      border-radius 10px
      border none
    &.active
      display block
      
  &-tabBox-chartInfo
    margin-top 10px
    > div
      display inline-block
      width 1rem
      height 1rem
    > p
      display inline-block
      margin 0
      font-size 1rem
      vertical-align top
      line-height 1
    &--work
      background-color #e0f358
    &--rest
      margin-left 10px
      background-color #ccc
      
  &-tabBox-chart
    width 100%
    margin-top 10px
    > img
      width 100%
      transform none
  &__list
    background-color #fff
    border-radius 5px
    > h2
      padding .5em 1em
      margin 0
    &--labels
      height 20px
      padding 0 1em
      margin 10px 0
      > img
        float left
        height 20px
      > span
        float left
        margin-right 10px
        line-height 20px
  &__listItems
    display flex
    flex-direction column
    margin-top 20px
    > div:nth-child(even)
      background-color #e6e6e6
    &--item
      display flex
      padding 0 1em
      > span
        display flex
        align-items center
        width 20px
        font-size 20px
      > .content
        width calc(100% - 50px)
        padding 10px
        border-right 1px solid rgba(138,0,75,.1)
        > p
          margin 0
          font-size 1.2rem
        > .situation
          margin-top 10px
          font-weight 500
      > .img
        display flex
        align-items center
        width 30px
        padding-left 10px
        > img
          width 100%
  &__chart
    &--bus
      width 100%
      text-align center
      > img
        width 100%
        transform none
  &__img
    &--normal
      width 100%
      &.desktop-only
        display none
      
.storyBlood
  display none
  justify-content center
  align-items center
  position fixed
  bottom 0
