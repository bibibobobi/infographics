.question
  align-items center
  justify-content center
  width 100vw
  height 100vh
  padding 0 15px
  background-color #333
  background-image url('./images/grid.png')
  background-size 15px 15px
  overflow-x hidden
  &-container
    width 100%
  &-options
    > h2
      margin 0 auto 40px
      text-align center
      color #fff
      font-size 2rem
      letter-spacing .2rem
    &__option
      display flex
      justify-content center
      align-items center
      height 80px
      margin 30px 0
      text-align center
      background-color #fff
      border 3px solid #b3b3b3
      border-radius 20px
      cursor pointer
