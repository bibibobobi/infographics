      margin-top 20px
      font-size 0
      > img
        width 120px
  &-titleStart
    display flex
    flex-direction column
    width 80%
    margin-top 60px
    &__title
      width 100%
    &__start
      display flex
      flex-direction column
      align-items center
      margin-top 20px
      > span
        color #e4f36f
        font-size 1.2rem
        font-weight 300
      > a
        display block
        margin-top 20px
        font-size 0
        > img
          width 120px
  &__slideshow
    width 80%
    margin-top 20px
