.slotMachine
  display none
  flex-direction column
  justify-content center
  align-items center
  width 100vw
  height 100vh
  background linear-gradient(#000, #270238 20%, #410652 30%, #62097b 40%, #9518bd 50%, #000)
  background-size contain
  background-image url('./images/slot-bg.jpg')
  overflow-x hidden
  &-container
    display flex
    flex-direction column
    align-items center
    position relative
    width 90%
    height 400px
    background-color #50514f
    border-radius 15px
  &__start
    display flex
    flex-direction column
    justify-content center
    align-items center
    position absolute
    top 0
    left 0
    z-index 100
    width 100%
    height 400px
    padding 20px
    background-color #fff
    border-radius 15px
    > span
      color #000
      font-size 1.5rem
      line-height 1.9rem
      text-align justify
    > button
      padding 10px 20px
      margin-top 20px
      color #fff
      background-color #cf192c
      border 3px solid #fff
      border-radius 20px
      cursor pointer
  &__game
    display flex
    justify-content center
    align-items center
    position absolute
    top 0
    left 0
    width 100%
    height 400px
    &-item
      position relative
      width 100%
      height 400px
      border-radius 15px
      &--img
        display flex
        flex-direction column
        align-items center
        position absolute
        top 50px
        left 50%
        transform translateX(-50%)
        > img
          width 150px
          height 150px
        > span
          margin-top 10px
          text-align justify
          font-size 1.5rem
          line-height 1.9rem
      &.success
        background-color #cf192c
        > .slotMachine__game-item--img
          top 50%
          left 50%
          transform translate(-50%, -50%)
      &--button
        display flex
        justify-content space-between
        position absolute
        bottom 40px
        left 50%
        transform translateX(-50%)
        width 70%
        > button
          width calc((100%- 20px)/2)
          padding 0
          color #fff
          font-size 0
          border none
          background-color transparent
          > img
            width 100%
  &__gameContainer
    position relative
    width 100%
    height 400px
    background-color #fff
    border-radius 5px
    overflow hidden
    &:before
      content ''
      position absolute
      z-index 999
      top 50%
      left -1px
      transform translateY(-50%)
      border-style solid
      border-width 10px 0 10px 15px
      border-color transparent transparent transparent #50514f
    &:after
      content ''
      position absolute
      z-index 999
      top 50%
      right -1px
      transform translateY(-50%)
      border-style solid
      border-width 10px 15px 10px 0
      border-color transparent #50514f transparent transparent
  .arrow
    width 100px
    margin-top 30px
    > img
      width 100%
