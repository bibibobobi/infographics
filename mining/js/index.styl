@keyframes cover-out
  0%
    width 0

  100%
    width 100%

@keyframes fade-out
  0%
    opacity 0

  100%
    opacity 1

@keyframes large-out
  0%
    width 0

  100%
    width 100%

@keyframes rotate
  0%
    transform rotateZ(0deg)
  
  100%
    transform rotateZ(360deg)

@keyframes jump-align-bottom
  0%
    margin-bottom 0

  50%
    margin-bottom 20px
  
  100%
    margin-bottom 0

@keyframes vehicle-vibration
  0%
    margin-bottom 0
  
  50%
    margin-bottom 3px

  100%
    margin-bottom 0px