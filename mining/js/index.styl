.chart-import-vs-export
  _width = 600px
  width _width
  // height _width
  margin 0 auto

  > .chart
    background-image url('../images/vdata/c01-1.png')
    background-repeat no-repeat
    background-size contain
    background-position center 0
    width _width
    height _width * (11 / 15)
    position relative

    > div
      position absolute
      top 0
      left 0
      width 0
      height _width * (11 / 15)
      overflow hidden
      
      background-repeat no-repeat
      background-size _width
      background-position 0 0
      
      &.active
        width 100%
        animation cover-out 0.35s linear

  > .conclusion
    width _width
    height (_width * (11 / 15) / 2)
    position relative
    top -35px
    display flex
    flex-direction row-reverse
    overflow hidden

    > .hole
      width (_width * (11 / 15) / 2)
      height (_width * (11 / 15) / 2)
      border-radius 50%
      background-color #271f19
      position absolute
      top 0
      right 0
      display none

      &.active 
        display block
        animation fade-out 0.15s linear

    > .boat, .point
      position relative
      display flex
      justify-content flex-start
      align-items center

      > img
        width 90%
        position relative

        &.active
          display block

    > .boat
      width (_width * 3 / 5)
      height (_width * (11 / 15) / 2)
      z-index 1
      
      > img
        left -300%
        transition left 2s
        &.active
          left 0
        
    > .point
      width (_width * 2 / 5)
      height (_width * (11 / 15) / 2)
      overflow hidden
      z-index 0

      > img
        right -100%
        transition right 1s
        &.active
          right 0

.mining_spots
  .taiwan_map
    _width = 247px
    _height = 464px

    background-image url(../images/vdata/c-taiwan.png)
    background-position center center
    background-size contain
    background-repeat no-repeat
    width _width
    height _height
    margin 100px auto 0
    position relative
    // overflow hidden

    > .miaoli, .yilan, .hualian, .taitung
      width 100%
      height 100%
      opacity 0
      // transition opacity 1s
      background-position center center
      background-size contain
      background-repeat no-repeat
      position absolute
      top 0
      left 0

      > .token
        width 34px
        height 34px
        position absolute
        display flex
        align-items flex-end

        > i
          background-position center bottom
          background-size contain
          background-repeat no-repeat
          width 100%
          height 0
          transition height 0.25s
          display block

        
