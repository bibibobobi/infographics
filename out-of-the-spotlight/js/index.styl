html
  margin 0
  padding 0
  font-size 16px
  font-family Noto Sans TC,Avenir,Helvetica,Arial,sans-serif
  width 100%
  overflow-x hidden
body
  margin 0
  padding 0
  font-size 16px
  font-family Noto Sans TC,Avenir,Helvetica,Arial,sans-serif
  overflow-x hidden
  width 100%

  .leading
    height 0
    padding 0
    footer
      display none

  > .hamburg
    display none

  header
    position fixed
    top 0
    left 0
    z-index 9999
    height 50px
    width 100vw
    background-color #323337   
    transition all 0.5s ease

    .nav
      position relative
      height 100%
      width 100%

      > .athletes
        border-top 1px solid rgba(255, 255, 255, 0.5)
        position absolute
        right 0
        bottom 0
        height 170px
        width 100%
        display flex
        align-items flex-end
        justify-content flex-end
        transition all 0.5s ease
        will-change transition

        > .credit
          display flex
          flex-direction column
          align-items center
          justify-content flex-end
          padding-bottom 15px
          border-bottom 1px solid rgba(255,255,255,0.05)

          position absolute
          height calc(161px - 15px - 1px)
          width 336px
          top -161px
          left 50%
          margin-left -168px
          background-image url(../assets/images/triangle.png)
          background-position center center
          background-repeat no-repeat
          background-size contain
          > span
            display block
            color rgba(255,255,255, 0.8)
            font-size 0.9rem

        > a
          margin 0 20px
          position relative
          text-align center
          width 100px
          height 50px
          display flex
          align-items center
          justify-content center
          padding-top 10px

          &::before
            content ''
            height 100px
            width 100px
            background-position center left
            background-size contain
            background-repeat no-repeat
            position absolute
            top -100px
            left 0
            padding 0 20px 0 0
            

          &:not(:first-child)
            &::before
              background-position center center
              padding 0 20px
              left -20px

          &.chen-shi-jie
            &:before
              background-image url(../assets/images/chen-shi-jie-sq.jpg)
          &.chen-jie
            &:before
              background-image url(../assets/images/chen-jie-sq.jpg)
          &.gong-yun
            &:before
              background-image url(../assets/images/gong-yun-sq.jpg)
          &.chen-wan-ting
            &:before
              background-image url(../assets/images/chen-wan-ting-sq.jpg)
          &.chen-yan-yu
            &:before
              background-image url(../assets/images/chen-yan-yu-sq.jpg)
          &.huang-shi-feng
            &:before
              background-image url(../assets/images/huang-shi-feng-sq.jpg)
          &.cheng-yi-jing
            &:before
              background-image url(../assets/images/cheng-yi-jing-sq.jpg)

      

  > .introduction
    width 100%
    height 80vh
    background-position center 0
    background-repeat no-repeat
    background-size cover
    position relative
    margin-bottom -60px
    margin-top 50px
    // display flex
    // align-content center

    > .title
      height 80%
      width 400px
      background-position center
      background-size contain
      background-repeat no-repeat
      position absolute
      z-index 2
      left 20px
      top 20px

    &::before
      content ''
      width 0
      height 0
      border-style solid
      border-width 10vh 50vw 10vh 50vw
      border-color: #fff transparent transparent #fff
      position absolute
      top 0
      left 0
      display block
      z-index 1

    &::after
      content ''
      width 0
      height 0
      border-style solid
      border-width 10vh 50vw 10vh 50vw
      border-color: transparent transparent #fff #fff
      position absolute
      bottom 0
      left 0
      display block
      z-index 1

  main
    width 70%
    max-width 850px
    margin 0 auto
    position relative
    z-index 2

    > .basic-info
      display flex
      align-items center
      > .thumbtail
        width 300px
        display inline-flex
        flex-direction column
        // align-items center     
        margin-right 2rem
        > img
          width 100%
        > span
          position relative
          font-size 1rem
          padding-top 1rem
          padding-left 1.2rem
          // padding-right 1rem
          padding-bottom 1rem
          margin 0 auto

          &:before
            content ''
            width 0
            height 0
            border-style solid
            border-width 0 0.5rem 1rem 0.5rem
            border-color: transparent transparent #000 transparent
            position absolute
            top 1.2rem
            left 0
            display block
            z-index 1 
      > .content
        display inline-block
        > .title
          margin-bottom 5px
          > span
            background-color #33448e
            height 30px
            width 30px
            display inline-flex
            color #fff
            justify-content center
            align-items center
            font-size 22px
            border-radius 50%
        > .info
          &:not(:last-child)
            border-bottom 1px solid rgba(0, 0, 0, 0.15)        
          padding 5px 0
          > .content
            color rgba(0, 0, 0, 0.4)
            padding-left 10px

    > .brief
      > h1  
        font-size 2.5rem
    > section
      margin-top 2rem
      > h2
        font-size 1.5rem
        font-weight normal
        color #e74c42

    p
      margin 2rem 0

  .facebook-comment
    width 70vw
    max-width 850px
    margin 30px auto 0
    background-color #fff
    padding 20px
    > .talk
      > h2
        font-size 1.5rem
        color #000
    
      
  footer
