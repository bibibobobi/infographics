        position relative
        width 400px
        border-top 1px solid rgba(255, 255, 255, 0.5)
        margin 0 auto 20px
        display block

      > span
        display block
        font-size 0.8rem
        margin 4px auto
        width 400px
        text-align center
    > .athletes
      width 70%
      max-width 850px
      margin 0 auto
      display flex
      justify-content center
      > a
        display block
        // flex 1
        width 130px
        text-align center
        padding-top 100px
        position relative

        &:before
          content ''
          background-position center center
          background-size contain
          background-repeat no-repeat
          width 90px
          height 90px
          position absolute
          top 0
          left 50%
          margin-left -45px

        &.gong-yun
          &:before
            background-image url(../assets/images/gong-yun.png)
        &.cheng-yi-jing
          &:before
            background-image url(../assets/images/cheng-yi-jing.png)
        &.huang-shi-feng
          &:before
            background-image url(../assets/images/huang-shi-feng.png)
        &.chen-wan-ting
          &:before
            background-image url(../assets/images/chen-wan-ting.png)
        &.chen-jie
          &:before
            background-image url(../assets/images/chen-jie.png)
        &.chen-yan-yu
          &:before
            background-image url(../assets/images/chen-yan-yu.png)
        &.chen-shi-jie
          &:before
            background-image url(../assets/images/chen-shi-jie.png)


    &:before
      content ''
      width 0
      height 0
      border-style solid
      border-width 5vh 50vw 5vh 50vw
      border-color: #fff #fff transparent transparent
      position absolute
      top 0
      left 0
      display block
      z-index 1
      margin-top -1px

