.nav
  &--btnset
    position absolute
    bottom 9px
    top 15px
    left 67px
    z-index 10
    width 42px
    height 42px

    div
      position absolute
      border-radius 50%
      transition all .1s ease-out
      cursor pointer
      display flex
      justify-content center
      align-items center
      width 42px
      height 42px
      left 9px
      top 0
      > a
        background-repeat no-repeat
        display block
        width 100%
        height 100%
        cursor pointer

      &.share
        top 0
        z-index 20
        left 0
        // background-image url(../assets/icons/share.png)
        // background-position center center
        // background-size contain
        // background-repeat no-repeat
      
      &.facebook
        background-color #2068b2
        -webkit-transition-delay 50ms
        transition-delay 20ms
        z-index 19
        > a
          background-image url(../assets/icons/facebook_white.png)
          background-size 40% auto
          background-position center center      
        
      &.line
        background-color #20b22c   
        -webkit-transition-delay 75ms
        transition-delay 40ms
        z-index 18
        > a
          background-image url(../assets/icons/line_white.png)
          background-size 75% auto
          background-position center center   

      &.g-plus
        background-color #c00   
        -webkit-transition-delay 75ms
        transition-delay 40ms
        z-index 17
        > a
          background-image url(../assets/icons/google-plus.png)
          background-size 60% auto
          background-position center center

      &:active:not(:first-child), &:focus:not(:first-child), &:hover:not(:first-child)
        box-shadow inset 0 0 4px rgba(0,0,0,.7), 0 4px 8px rgba(0,0,0,.4)
        
      &:not(:first-child)
        position absolute
        opacity 0

    &:hover 
      width 167px
      > div:not(:first-child)
        position absolute
        opacity 1
        margin-left 9px
        &.facebook
          left 44px
        &.line
          left 98px
        &.g-plus
          left 149px